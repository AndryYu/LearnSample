<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hello_jni"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/black"
        android:text="hello-jni"
        android:layout_marginTop="6dp"
        android:textFontWeight="500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hello_jni_result"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/teal_700"
        android:background="@drawable/bg_shape_code_result"
        android:layout_width="wrap_content"
        android:paddingHorizontal="40dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_hello_jni"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_jni_callback"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/black"
        android:text="hello-jniCallback"
        android:layout_marginTop="16dp"
        android:textFontWeight="500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_hello_jni_result"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_jni_callback_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/tv_jni_callback"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_jni_callback_result"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/teal_700"
        android:background="@drawable/bg_shape_code_result"
        android:layout_width="wrap_content"
        android:paddingHorizontal="40dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_jni_callback_status"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_jni_libs"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/black"
        android:text="hello-libs"
        android:layout_marginTop="16dp"
        android:textFontWeight="500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_jni_callback_result"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_jni_libs_result"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/teal_700"
        android:background="@drawable/bg_shape_code_result"
        android:layout_width="wrap_content"
        android:paddingHorizontal="40dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_jni_libs"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>